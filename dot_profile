##### Environment #####
# Default applications
export BROWSER='brave-browser'
export EDITOR='nvim'

# PATH
[ -d "$HOME/.local/share/JetBrains/Toolbox/scripts" && export PATH="$HOME/.local/share/JetBrains/Toolbox/scripts:$PATH" ]
[ -d "$HOME/bin" ] && export PATH="$HOME/bin:$PATH"
[ -d "$HOME/.local/bin" ] && export PATH="$HOME/.local/bin:$PATH"

# MANPATH
[ -d "$HOME/.local/share/man" ] && export MANPATH="$HOME/.local/share/man"

# Go
export GOPATH="$HOME/go"
export GOBIN="$GOPATH/bin"
[ -d "$GOBIN" ] && export PATH="$GOBIN:$PATH"

# Rust
[ -f "$HOME/.cargo/env" ] && . "$HOME/.cargo/env"

# xsecurelock
export XSECURELOCK_BLANK_DPMS_STATE=suspend
export XSECURELOCK_FONT='Ubuntu Mono'

# HiDPI
export QT_AUTO_SCREEN_SCALE_FACTOR=1
export QT_ENABLE_HIGHDPI_SCALING=1
