#!/usr/bin/env bash

# DE-specific
LOCK_CMD='i3lock-fancy --pixelate -f "Ubuntu-Mono-Nerd-Font-Complete" scrot'
LOGOUT_CMD='i3-msg exit'

declare -A OPTIONS=(
	["Lock"]="${LOCK_CMD}"
	["Logout"]="${LOGOUT_CMD}"
	["Poweroff"]="systemctl poweroff"
	["Reboot"]="systemctl reboot"
	["Suspend"]="${LOCK_CMD} && systemctl suspend"
)

selected=$(IFS=$'\n' eval 'echo "${!OPTIONS[*]}"' | sort | rofi -dmenu -i -p "power")
eval "${OPTIONS[${selected}]}"
